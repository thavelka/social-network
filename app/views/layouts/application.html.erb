<!DOCTYPE html>
<html>
<head>
  <title>BookFace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="navbar-inner">
			<div class="container">
				<a href="#" class="brand"> Generic Social Networkâ„¢ </a>
				<ul class="nav">
					<li class="divider-vertical"></li>
					<li><%= link_to statuses_path do %>
						<i class="icon-home icon-white"></i> Feed
						<% end %></li>
					<li class="divider-vertical"></li>
					<li><%= link_to new_status_path do %>
						<i class="icon-pencil icon-white"></i> New Post
						<% end %></li>
					<li class="divider-vertical"></li>
        </ul>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
          <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-briefcase icon-white"></i> <%= current_user.full_name %>
                <b class="caret"></b>
              </a>
             
              <ul class="dropdown-menu">
                
                  <li> <%= link_to edit_user_registration_path do %>
                    <i class="icon-wrench"></i> Account Settings
                    <% end %></li>
                  <li class="divider-horizontal"></li>
                  
                  <li> <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="icon-share"></i> 
                    Sign Out
                    <% end %></li>
                  <li class="divider-horizontal"></li>
              </ul>
                  
              <% else %>
              <ul class= "nav">
                  <li> <%= link_to new_user_session_path do %>
                    <i class="icon-user icon-white"></i> Sign In
                    <% end %></li>
                  <li class="divider-horizontal"></li>
              </ul>
              <% end %>
        </li>
          
          
			</div>
		</div>
	</nav>
	<div class="container">
		<% if flash[:notice]%>
      <div class="alert alert-success">
        <button class="close" data-dismiss="alert">x</button>
        <%= flash[:notice] %>
      </div>
    <% end %>
    
		<% if flash[:alert]%>
      <div class="alert alert-error">
        <button class="close" data-dismiss="alert">x</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
    
		<%= yield %>
	</div>
</body>

</html>
