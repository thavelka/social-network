<!DOCTYPE html>
<html>
<head>
  <title>BookFace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <!--Navbar config-->
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="navbar-inner">
			<div class="container">
				<a href="#" class="brand"> Generic Social Networkâ„¢ </a>
				<ul class="nav">
					<li class="divider-vertical"></li>
					<li><%= link_to feed_path do %>
						<i class="icon-home icon-white"></i> Feed
						<% end %></li>
					<li class="divider-vertical"></li>
					<li><%= link_to new_status_path do %>
						<i class="icon-pencil icon-white"></i> New Post
						<% end %></li>
					<li class="divider-vertical"></li>
        </ul>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
          <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-briefcase icon-white"></i> <%= current_user.full_name %>
                <b class="caret"></b>
              </a>
             
              <ul class="dropdown-menu">
                
                  <li> <%= link_to edit_user_registration_path do %>
                    <i class="icon-wrench"></i> Account Settings
                    <% end %></li>
                  <li class="divider-horizontal"></li>
                  
                  <li> <%= link_to logout_path do %>
                    <i class="icon-share"></i> 
                    Sign Out
                    <% end %></li>
                  <li class="divider-horizontal"></li>
              </ul>
                  
              <% else %>
              <ul class= "nav">
                  <li> <%= link_to login_path do %>
                    <i class="icon-user icon-white"></i> Sign In
                    <% end %></li>
                  <li class="divider-horizontal"></li>
              </ul>
              <% end %>
        </li>
          </div>
		</div>
	</nav>
  
  <!--Alert/Notice formatting-->
	<div class="container">
    <div class="span 10 offset 1">
    <% flash.each do |type, message| %>
        <div class="alert <%= flash_class(type.to_s) %>">
            <button class="close" data-dismiss="alert">x</button>
            <%= message %>
        </div>
    <% end %>
    
  <!--Display page content-->
		<%= yield %>
  </div>
	</div>
</body>
<footer>
  <div align="center"><em>SkodaSoft 2014</em></div>
</footer>
</html>
